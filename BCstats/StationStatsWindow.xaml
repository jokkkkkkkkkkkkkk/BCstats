<Window x:Class="BCstats.StationStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:assembly="clr-namespace:System;assembly=mscorlib"   
        xmlns:local="clr-namespace:BCstats"  
             
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Name="ssWindow"
        Title="台站播出数据" 
        Height="500" Width="250"
        Icon="/BCstats;component/radio.ico"
        Loaded="StationStatsWindow_Loaded"
        >


    <Grid Margin="0,0,3.6,0.4"  Background="Transparent">

        <DataGrid Name="StationStats_dataGridStats" 
                  Margin="10,10,74.6,45" 
                  FontSize="14"
                  RowHeight="60"
                  
                  SelectionMode="Single"
                  AutoGenerateColumns="False" 
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                   
                  RowStyle="{StaticResource DataGridRowStyle_StationStats}"   
                  CellStyle="{StaticResource DataGridCellReadOnlyStyle}" >

            <DataGrid.Columns>

                <DataGridTextColumn Header="频率"     HeaderStyle="{StaticResource dg_BigHeaderStyle}"   
                                    IsReadOnly="True" CanUserResize="False" Width="60" 
                                    Binding="{Binding frequency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    ElementStyle="{StaticResource dg_ElementStyle}"/>

                <DataGridTextColumn Header="当月播出时间" CanUserResize="False" Width="100" IsReadOnly="True"
                                    Binding="{Binding hours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    ElementStyle="{StaticResource dg_ElementStyle}"/>
            </DataGrid.Columns>
        </DataGrid>



        <DataGrid Name="StationStats_dataGridFm" 
                  Margin="170,10,8.6,379" 
                  FontSize="14"
                  RowHeight="35"
                  AutoGenerateColumns="False" 
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"           
                  RowStyle="{StaticResource DataGridRowStyle}"   
                  SelectionMode="Single" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="调频"     HeaderStyle="{StaticResource dg_HeaderStyle}"   
                                    IsReadOnly="False" CanUserResize="False" Width="50"
                                    ElementStyle="{StaticResource dg_ElementStyle}" />
            </DataGrid.Columns>
        </DataGrid>



        <DataGrid Name="StationStats_dataGridTv" 
                  Margin="170,100,6.6,289" 
                  FontSize="14"
                  RowHeight="35"
                  AutoGenerateColumns="False" 
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"           
                  RowStyle="{StaticResource DataGridRowStyle}"   
                  SelectionMode="Single" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="电视"     HeaderStyle="{StaticResource dg_HeaderStyle}"   
                                    IsReadOnly="False" CanUserResize="False" Width="50"
                                    ElementStyle="{StaticResource dg_ElementStyle}" />
            </DataGrid.Columns>
        </DataGrid>





        <Button x:Name="btn_ss_refresh" Content="刷新" HorizontalAlignment="Left" Margin="10,441,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btn_ss_quit" Content="退出" HorizontalAlignment="Left" Margin="155,441,0,0" VerticalAlignment="Top" Width="75" Click="btn_ss_quit_Click"/>



    </Grid>


</Window>
